doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width')
    title BxxC Clan | #{pageTitle}
    block css
      link(rel='stylesheet', href='/css/core.css')
    block js
      script(src='http://localhost:35729/livereload.js')
      script(src='http://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js')
      script(type='text/javascript', src='//cdn.sublimevideo.net/js/mq1ub637.js')
  body
    nav.navbar.navbar-inverse.navbar-static-top(role='navigation')
      .container
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar-collapse')
              span.si-icon.si-icon-hamburger-cross(data-icon-name='hamburgerCross')

            a.navbar-brand(href='/')
              img.visible-xs(src="http://bxxc.s3.amazonaws.com/Appendix_PRO.png" alt="logo")

          #navbar-collapse.collapse.navbar-collapse
            ul.nav.navbar-nav.pull-left
              li(class=(pageTitle === 'Home' ? 'active' : ''))
                a(href='/') Home

              li(class=(pageTitle === 'AW' ? 'active' : ''))
                a(href='/aw') Bxxc plays aw

              li(class=(pageTitle === 'Clips' ? 'active' : ''))
                a(href='/clips') Other Clips

            //-ul.nav.navbar-nav.pull-right
              li
                a(href='#') Link
              li
                a(href='#') Link
              li
                a(href='#') Link


    #background
      #overlay

    #outdated

    .content
      .container
        block content

    script(src='/js/core.js')
