doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width')
    meta(name='node-env', content=env)
    title BxxC Clan | #{pageTitle}
    block css
      link(rel='stylesheet', href='/css/core.css')
