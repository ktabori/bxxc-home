        script(src='http://localhost:35729/livereload.js')
      script(src='http://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js')
  body
    #background
      #overlay

    #outdated

    .content
      .container
        block content

    script(src='/js/core.js')
